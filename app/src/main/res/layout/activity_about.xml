<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/about_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|top|center_horizontal"
            android:layout_marginTop="200dp"
            android:fontFamily="roboto_flex"
            android:text="Boot PC"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?attr/textColorBootPc"
            android:textSize="42dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center|center_horizontal"
            android:layout_marginTop="2dp"
            android:text="v1.1"
            android:textAlignment="center"
            android:textColor="?android:textColorTertiary"
            android:textIsSelectable="true"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|top|center_horizontal"
            android:layout_marginTop="200dp"
            android:text="For"
            android:textAlignment="center"
            android:textColor="?android:textColorTertiary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/about_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|top|center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Contact | Report | Suggestion"
            android:textAlignment="center"
            android:textColor="?android:textColorTertiary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center|center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/git" />

            <TextView
                android:id="@+id/about_github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:text="@string/contact_info_git"
                android:textColor="?android:textColorTertiary" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
